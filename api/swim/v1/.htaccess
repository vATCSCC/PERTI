# VATSIM SWIM API v1 - Apache Configuration
# Clean URLs, Authorization passthrough, and CORS

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/swim/v1/

    # Pass Authorization header through to PHP
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle OPTIONS preflight requests (return 204 No Content)
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ - [R=204,L]

    # Metering endpoint: /metering/{airport} and /metering/{airport}/sequence
    RewriteRule ^metering/([A-Za-z0-9]+)/?$ metering.php [L,QSA]
    RewriteRule ^metering/([A-Za-z0-9]+)/([a-z]+)/?$ metering.php [L,QSA]

    # Flight endpoint: /flight/{gufi} for single flight lookup
    RewriteRule ^flight/([A-Za-z0-9_-]+)/?$ flight.php [L,QSA]

    # Ingest endpoints: /ingest/{endpoint} -> /ingest/{endpoint}.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{DOCUMENT_ROOT}/api/swim/v1/ingest/$1.php -f
    RewriteRule ^ingest/([a-zA-Z0-9_-]+)/?$ ingest/$1.php [L,QSA]

    # TMI endpoints: /tmi/{endpoint} -> /tmi/{endpoint}.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{DOCUMENT_ROOT}/api/swim/v1/tmi/$1.php -f
    RewriteRule ^tmi/([a-zA-Z0-9_-]+)/?$ tmi/$1.php [L,QSA]

    # Clean URLs: Rewrite /endpoint to /endpoint.php
    # Only if the request is not a file and .php version exists
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L,QSA]

    # Also handle URLs with trailing slash
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([a-zA-Z0-9_-]+)/$ $1.php [L,QSA]
</IfModule>

# SetEnvIf for Authorization header (backup method)
<IfModule mod_setenvif.c>
    SetEnvIf Authorization "(.*)" HTTP_AUTHORIZATION=$1
</IfModule>

# CORS Headers
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Authorization, Content-Type, X-SWIM-Source, X-API-Key"
    Header always set Access-Control-Max-Age "86400"
</IfModule>

# PHP settings for API
<IfModule mod_php.c>
    php_flag display_errors Off
    php_value max_execution_time 60
</IfModule>
