{
	"info": {
		"_postman_id": "swim-api-v1-collection",
		"name": "VATSIM SWIM API v1",
		"description": "System Wide Information Management (SWIM) API for VATSIM.\n\n## Authentication\nAll endpoints require Bearer token authentication.\n\n## Base URL\n`https://perti.vatcscc.org/api/swim/v1`",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [{"key": "token", "value": "{{api_key}}", "type": "string"}]
	},
	"variable": [
		{"key": "base_url", "value": "https://perti.vatcscc.org/api/swim/v1"},
		{"key": "api_key", "value": "swim_dev_your_key_here"}
	],
	"item": [
		{
			"name": "Flights",
			"item": [
				{"name": "List Active Flights", "request": {"method": "GET", "url": {"raw": "{{base_url}}/flights?status=active&per_page=100", "host": ["{{base_url}}"], "path": ["flights"], "query": [{"key": "status", "value": "active"}, {"key": "per_page", "value": "100"}]}}},
				{"name": "Filter by Callsign", "request": {"method": "GET", "url": {"raw": "{{base_url}}/flights?callsign=UAL*&status=active", "host": ["{{base_url}}"], "path": ["flights"], "query": [{"key": "callsign", "value": "UAL*"}, {"key": "status", "value": "active"}]}}},
				{"name": "Filter by Destination", "request": {"method": "GET", "url": {"raw": "{{base_url}}/flights?dest_icao=KJFK&status=active", "host": ["{{base_url}}"], "path": ["flights"], "query": [{"key": "dest_icao", "value": "KJFK"}, {"key": "status", "value": "active"}]}}},
				{"name": "Get Single Flight", "request": {"method": "GET", "url": {"raw": "{{base_url}}/flight?gufi=VAT-20260116-UAL123-KJFK-KLAX", "host": ["{{base_url}}"], "path": ["flight"], "query": [{"key": "gufi", "value": "VAT-20260116-UAL123-KJFK-KLAX"}]}}}
			]
		},
		{
			"name": "Positions",
			"item": [
				{"name": "Get All Positions (GeoJSON)", "request": {"method": "GET", "url": {"raw": "{{base_url}}/positions", "host": ["{{base_url}}"], "path": ["positions"]}}},
				{"name": "Positions by Destination", "request": {"method": "GET", "url": {"raw": "{{base_url}}/positions?dest_icao=KJFK", "host": ["{{base_url}}"], "path": ["positions"], "query": [{"key": "dest_icao", "value": "KJFK"}]}}}
			]
		},
		{
			"name": "TMI",
			"item": [
				{"name": "Get Active Programs", "request": {"method": "GET", "url": {"raw": "{{base_url}}/tmi/programs", "host": ["{{base_url}}"], "path": ["tmi", "programs"]}}},
				{"name": "Get Controlled Flights", "request": {"method": "GET", "url": {"raw": "{{base_url}}/tmi/controlled", "host": ["{{base_url}}"], "path": ["tmi", "controlled"]}}}
			]
		},
		{
			"name": "Ingest",
			"item": [
				{"name": "Create Pre-file", "request": {"method": "POST", "header": [{"key": "Content-Type", "value": "application/json"}], "body": {"mode": "raw", "raw": "{\n    \"flights\": [{\n        \"callsign\": \"UAL123\",\n        \"dept_icao\": \"KJFK\",\n        \"dest_icao\": \"KLAX\",\n        \"aircraft_type\": \"B738\",\n        \"route\": \"DEEZZ5 DEEZZ J584 ORD\",\n        \"cruise_altitude\": 35000,\n        \"phase\": \"prefile\"\n    }]\n}"}, "url": {"raw": "{{base_url}}/ingest/adl", "host": ["{{base_url}}"], "path": ["ingest", "adl"]}}},
				{"name": "Update TMI Status", "request": {"method": "POST", "header": [{"key": "Content-Type", "value": "application/json"}], "body": {"mode": "raw", "raw": "{\n    \"flights\": [{\n        \"callsign\": \"UAL123\",\n        \"dept_icao\": \"KJFK\",\n        \"dest_icao\": \"KLAX\",\n        \"tmi\": {\n            \"ctl_type\": \"GDP\",\n            \"slot_time_utc\": \"2026-01-16T18:30:00Z\",\n            \"delay_minutes\": 45\n        }\n    }]\n}"}, "url": {"raw": "{{base_url}}/ingest/adl", "host": ["{{base_url}}"], "path": ["ingest", "adl"]}}}
			],
			"description": "Write access required (partner/system tier)"
		},
		{
			"name": "Virtual Airline (AOC)",
			"item": [
				{
					"name": "Get Airline Flights",
					"request": {"method": "GET", "url": {"raw": "{{base_url}}/flights?callsign=DLH*&status=active", "host": ["{{base_url}}"], "path": ["flights"], "query": [{"key": "callsign", "value": "DLH*"}, {"key": "status", "value": "active"}]}},
					"description": "Get all active flights for your airline (replace DLH with your ICAO code)"
				},
				{
					"name": "Push Telemetry with Vertical Rate",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {"mode": "raw", "raw": "{\n    \"flights\": [{\n        \"callsign\": \"DLH401\",\n        \"dept_icao\": \"KJFK\",\n        \"dest_icao\": \"EDDF\",\n        \"phase\": \"climbing\",\n        \"latitude\": 41.2345,\n        \"longitude\": -72.5678,\n        \"altitude_ft\": 18500,\n        \"heading_deg\": 65,\n        \"groundspeed_kts\": 320,\n        \"vertical_rate_fpm\": 2200\n    }]\n}"},
						"url": {"raw": "{{base_url}}/ingest/adl", "host": ["{{base_url}}"], "path": ["ingest", "adl"]}
					},
					"description": "Push telemetry with vertical_rate_fpm from flight sim.\n\nPositive = climbing, Negative = descending"
				},
				{
					"name": "Push Telemetry - Descent",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {"mode": "raw", "raw": "{\n    \"flights\": [{\n        \"callsign\": \"DLH401\",\n        \"dept_icao\": \"KJFK\",\n        \"dest_icao\": \"EDDF\",\n        \"phase\": \"descending\",\n        \"latitude\": 50.1234,\n        \"longitude\": 7.5678,\n        \"altitude_ft\": 12000,\n        \"heading_deg\": 95,\n        \"groundspeed_kts\": 280,\n        \"vertical_rate_fpm\": -1800\n    }]\n}"},
						"url": {"raw": "{{base_url}}/ingest/adl", "host": ["{{base_url}}"], "path": ["ingest", "adl"]}
					},
					"description": "Descending flight: -1800 fpm"
				},
				{
					"name": "Push OOOI Times (ACARS)",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {"mode": "raw", "raw": "{\n    \"flights\": [{\n        \"callsign\": \"DLH401\",\n        \"dept_icao\": \"KJFK\",\n        \"dest_icao\": \"EDDF\",\n        \"out_utc\": \"2026-01-16T14:30:00Z\",\n        \"off_utc\": \"2026-01-16T14:45:00Z\",\n        \"on_utc\": \"2026-01-16T22:15:00Z\",\n        \"in_utc\": \"2026-01-16T22:25:00Z\"\n    }]\n}"},
						"url": {"raw": "{{base_url}}/ingest/adl", "host": ["{{base_url}}"], "path": ["ingest", "adl"]}
					},
					"description": "Push OOOI times from ACARS:\n- OUT: Left gate\n- OFF: Wheels up\n- ON: Wheels down\n- IN: Arrived at gate"
				},
				{
					"name": "Track Update (High-Frequency)",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {"mode": "raw", "raw": "{\n    \"tracks\": [{\n        \"callsign\": \"DLH401\",\n        \"latitude\": 54.5123,\n        \"longitude\": -24.8765,\n        \"altitude_ft\": 39000,\n        \"ground_speed_kts\": 486,\n        \"heading_deg\": 78,\n        \"vertical_rate_fpm\": 0\n    }]\n}"},
						"url": {"raw": "{{base_url}}/ingest/track", "host": ["{{base_url}}"], "path": ["ingest", "track"]}
					},
					"description": "High-frequency position streaming (every 5-10 sec).\nMax 1000 tracks per request."
				}
			],
			"description": "AOC integration - push telemetry from flight sim.\n\nSupported fields:\n- vertical_rate_fpm (climb/descent rate)\n- out_utc, off_utc, on_utc, in_utc (OOOI times)\n- eta_utc, etd_utc (FMC times)"
		}
	]
}
