<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- URL Rewrite: Clean URLs to PHP files -->
        <rewrite>
            <rules>
                <!-- Pass Authorization header through -->
                <rule name="HTTP Authorization Header" stopProcessing="false">
                    <match url=".*" />
                    <conditions>
                        <add input="{HTTP_AUTHORIZATION}" pattern=".+" />
                    </conditions>
                    <serverVariables>
                        <set name="HTTP_AUTHORIZATION" value="{HTTP_AUTHORIZATION}" />
                    </serverVariables>
                    <action type="None" />
                </rule>

                <!-- Metering endpoint: /metering/{airport} and /metering/{airport}/sequence -->
                <rule name="Metering Endpoint" stopProcessing="true">
                    <match url="^metering/([A-Za-z0-9]+)(/[a-z]+)?/?$" ignoreCase="true" />
                    <action type="Rewrite" url="metering.php" />
                </rule>

                <!-- Reference taxi-times endpoint: /reference/taxi-times/{airport} -->
                <rule name="Reference Taxi Times Endpoint" stopProcessing="true">
                    <match url="^reference/taxi-times/([A-Za-z0-9]+)/?$" ignoreCase="true" />
                    <action type="Rewrite" url="reference/taxi-times.php" />
                </rule>

                <!-- Flight endpoint: /flight/{gufi} for single flight lookup -->
                <rule name="Flight Single Endpoint" stopProcessing="true">
                    <match url="^flight/([A-Za-z0-9_\-]+)/?$" ignoreCase="true" />
                    <action type="Rewrite" url="flight.php" />
                </rule>

                <!-- Ingest endpoints: /ingest/{endpoint} -> /ingest/{endpoint}.php -->
                <rule name="Ingest Endpoints" stopProcessing="true">
                    <match url="^ingest/([a-zA-Z0-9_\-]+)/?$" ignoreCase="true" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="ingest/{R:1}.php" />
                </rule>

                <!-- TMI endpoints: /tmi/{endpoint} -> /tmi/{endpoint}.php -->
                <rule name="TMI Endpoints" stopProcessing="true">
                    <match url="^tmi/([a-zA-Z0-9_\-]+)/?$" ignoreCase="true" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="tmi/{R:1}.php" />
                </rule>

                <!-- Rewrite clean URLs to PHP files -->
                <rule name="Clean URLs to PHP" stopProcessing="true">
                    <match url="^([a-z0-9\-]+)$" ignoreCase="true" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}.php" matchType="IsFile" />
                    </conditions>
                    <action type="Rewrite" url="{R:1}.php" />
                </rule>
            </rules>
        </rewrite>

        <!-- CORS Headers -->
        <httpProtocol>
            <customHeaders>
                <add name="Access-Control-Allow-Origin" value="*" />
                <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
                <add name="Access-Control-Allow-Headers" value="Authorization, Content-Type, X-SWIM-Source, X-API-Key" />
                <add name="Access-Control-Max-Age" value="86400" />
            </customHeaders>
        </httpProtocol>

        <!-- Handle OPTIONS preflight -->
        <handlers>
            <remove name="OPTIONSVerbHandler" />
            <add name="OPTIONSVerbHandler" path="*" verb="OPTIONS" modules="ProtocolSupportModule" resourceType="Unspecified" requireAccess="None" />
        </handlers>
    </system.webServer>
</configuration>
