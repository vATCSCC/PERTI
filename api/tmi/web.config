<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- API root -->
                <rule name="TMI API Index" stopProcessing="true">
                    <match url="^api/tmi/?$" />
                    <action type="Rewrite" url="api/tmi/index.php" />
                </rule>
                
                <!-- Entries -->
                <rule name="TMI Entries List" stopProcessing="true">
                    <match url="^api/tmi/entries/?$" />
                    <action type="Rewrite" url="api/tmi/entries.php" appendQueryString="true" />
                </rule>
                <rule name="TMI Entries Single" stopProcessing="true">
                    <match url="^api/tmi/entries/(\d+)/?$" />
                    <action type="Rewrite" url="api/tmi/entries.php?id={R:1}" appendQueryString="true" />
                </rule>
                
                <!-- Programs -->
                <rule name="TMI Programs List" stopProcessing="true">
                    <match url="^api/tmi/programs/?$" />
                    <action type="Rewrite" url="api/tmi/programs.php" appendQueryString="true" />
                </rule>
                <rule name="TMI Programs Single" stopProcessing="true">
                    <match url="^api/tmi/programs/(\d+)/?$" />
                    <action type="Rewrite" url="api/tmi/programs.php?id={R:1}" appendQueryString="true" />
                </rule>
                
                <!-- Advisories -->
                <rule name="TMI Advisories List" stopProcessing="true">
                    <match url="^api/tmi/advisories/?$" />
                    <action type="Rewrite" url="api/tmi/advisories.php" appendQueryString="true" />
                </rule>
                <rule name="TMI Advisories Single" stopProcessing="true">
                    <match url="^api/tmi/advisories/(\d+)/?$" />
                    <action type="Rewrite" url="api/tmi/advisories.php?id={R:1}" appendQueryString="true" />
                </rule>
                
                <!-- Public Routes -->
                <rule name="TMI Public Routes List" stopProcessing="true">
                    <match url="^api/tmi/public-routes/?$" />
                    <action type="Rewrite" url="api/tmi/public-routes.php" appendQueryString="true" />
                </rule>
                <rule name="TMI Public Routes Single" stopProcessing="true">
                    <match url="^api/tmi/public-routes/(\d+)/?$" />
                    <action type="Rewrite" url="api/tmi/public-routes.php?id={R:1}" appendQueryString="true" />
                </rule>
                
                <!-- Reroutes -->
                <rule name="TMI Reroutes List" stopProcessing="true">
                    <match url="^api/tmi/reroutes/?$" />
                    <action type="Rewrite" url="api/tmi/reroutes.php" appendQueryString="true" />
                </rule>
                <rule name="TMI Reroutes Single" stopProcessing="true">
                    <match url="^api/tmi/reroutes/(\d+)/?$" />
                    <action type="Rewrite" url="api/tmi/reroutes.php?id={R:1}" appendQueryString="true" />
                </rule>
                
                <!-- Active -->
                <rule name="TMI Active" stopProcessing="true">
                    <match url="^api/tmi/active/?$" />
                    <action type="Rewrite" url="api/tmi/active.php" appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>
        
        <httpProtocol>
            <customHeaders>
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-Frame-Options" value="DENY" />
                <add name="X-XSS-Protection" value="1; mode=block" />
            </customHeaders>
        </httpProtocol>
        
        <directoryBrowse enabled="false" />
    </system.webServer>
</configuration>
